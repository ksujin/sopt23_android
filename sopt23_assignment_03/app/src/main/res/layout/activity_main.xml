<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--뷰페이저는 프래그먼트들이 올라올곳-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_act_frag_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tl_main_act_bottom_menu"></android.support.v4.view.ViewPager>

    <!--탭 레이아웃 쓰기 위해 디자인 라이브러리 추가 -->
    <!--indicator 없애고 싶으면 tabIndicatorColor 0dp 주기 -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_main_act_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="5dp"
        app:tabIndicatorColor="#40D39F"

        >

    </android.support.design.widget.TabLayout>

</RelativeLayout>